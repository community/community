stale_label_id = "LA_kwDOEfmk4M8AAAABYVCU-g"
owner = "community"
repo = "community"
only_these_categories = ["Copilot", "Projects and Issues", "Accessibility"]

body =<<BODY
ðŸ•’ **Stale Discussion Alert** ðŸ•’

